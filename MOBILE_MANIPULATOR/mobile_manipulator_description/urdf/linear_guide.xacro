<?xml version="1.0"?>
<robot name="linear_guide" xmlns:xacro="http://ros.org/wiki/xacro">


  <link name="column">
    <visual>
      <geometry>
        <box size="0.08 0.08 0.8"/> 
      </geometry>
      <origin xyz="0 -0.1 0.42" rpy="0 0 0"/> 
      <material name="grey">
        <color rgba="0.5 0.5 0.5 0.8"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.08 0.08 0.8"/> 
      </geometry>
      <origin xyz="0 -0.1 0.37" rpy="0 0 0"/> 
    </collision>
    <inertial>
      <mass value="5.0"/>
      <inertia ixx="0.1" iyy="0.1" izz="0.1" ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>
  </link>

    <gazebo reference="column">
      <material>Gazebo/Orange</material>
  </gazebo>

  <link name="slider">
    <visual>
      <geometry>
        <box size="0.3 0.3 0.05"/> 
      </geometry>
      <origin xyz="0 -0.25 0.05" rpy="0 0 0"/> 
      <material name="blue">
        <color rgba="0.1 0.1 0.8 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.3 0.3 0.05"/> 
      </geometry>
      <origin xyz="0 -0.25 0.05" rpy="0 0 0"/> 
    </collision>

    <inertial>
      <mass value="2.0"/>
      <inertia ixx="0.1" iyy="0.1" izz="0.1" ixy="0.0" ixz="0.0" iyz="0.0"/>
    </inertial>
  </link>
 <gazebo reference="slider">
      <material>Gazebo/Grey</material>
  </gazebo>

  <joint name="slider_joint" type="prismatic">
    <parent link="column"/>
    <child link="slider"/>
    <origin xyz="0 0 0" rpy="0 0 0"/> 
    <axis xyz="0 0 1"/> 
    <limit lower="0.0" upper="0.9" effort="200" velocity="0.3"/>
  </joint>


</robot>
